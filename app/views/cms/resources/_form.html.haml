= form_for @entry do |f|
  - @resource.form_attributes.each_value do |attribute|
    %fieldset.form-group
      = render attribute.form_partial_path, f: f, entry: @entry,
        attribute: attribute
  %fieldset.form-group
    = f.submit t('cms.buttons.submit'), class: 'btn btn-primary'
    = link_to t('cms.buttons.back'), polymorphic_path(@resource.model),
      class: 'btn btn-secondary-outline'
    - if @entry.persisted?
      = link_to t('cms.buttons.delete'), polymorphic_path(@entry),
        class: 'btn btn-danger-outline pull-xs-right', method: :delete,
        data: { confirm: t('cms.ui.confirm') }
