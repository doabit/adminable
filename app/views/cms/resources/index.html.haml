%table.table
  %thead
    %tr
      - @columns_for_list.each do |column|
        %th
          = column.name
      %th
  %tbody
    - @entries.each do |entry|
      %tr
        - @columns_for_list.each do |column|
          %td
            = entry[column.name]
        %td.text-nowrap
          = link_to 'Edit', send("edit_#{ @resource.model_name.element }_path", entry), class: 'label label-primary'
          = link_to 'Delete', send("#{ @resource.model_name.element }_path", entry), class: 'label label-danger', method: :delete
= link_to 'New Entry', send("new_#{ @resource.model_name.element }_path"), class: 'btn btn-primary'
